<odoo>
    <data noupdate="1">
        <!-- Allow Public Users to Read Projects -->
        <record id="project_public_rule" model="ir.rule">
            <field name="name">Public Project Access</field>
            <field name="model_id" ref="model_araltech_project"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('araltech_projects.group_public_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
