<odoo>
    <template id="project_list_template" name="Project List">
        <t t-call="website.layout">
            <div class="container">
                <h1 class="text-center py-4">Our Projects</h1>
                <h4 class="text-center pb-4">Check out our projects</h4>
                <div class="row">
                    <t t-foreach="projects" t-as="project">
                        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                            <div class="card">
                                <t t-if="project.image">
                                    <img class="card-img-top img-thumbnail" t-att-src="'data:image/png;base64,' + project.image.decode('utf-8')" style="width: 100%; height: auto; max-height: 200px; object-fit: cover;"/>
                                </t>
                                <div class="card-body">
                                    <h5 class="card-title" t-esc="project.name"/>
                                    <a t-att-href="'/projects/' + str(project.id)" class="btn btn-primary">View Project</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="project_detail_template" name="Project Detail">
        <t t-call="website.layout">
            <div class="container py-5">
                <div class="row">
                    <div class="col-md-8">
                        <h1 t-esc="project.name"/>
                        <p t-esc="project.description"/>
                        <div>
                            <a t-if="project.demo_url" t-att-href="project.demo_url" class="btn btn-primary mb-2">Demo URL</a>
                            <a t-if="project.demo_video_url" t-att-href="project.demo_video_url" class="btn btn-secondary mb-2">Demo Video URL</a>
                        </div>
                        <p class="mt-2">Start Date: <t t-esc="project.start_date"/></p>
                        <p>End Date: <t t-esc="project.end_date"/></p>
                    </div>
                    <div class="col-md-4">
                        <t t-if="project.image">
                            <img t-att-src="'data:image/png;base64,' + project.image.decode('utf-8')" class="img-fluid"/>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
