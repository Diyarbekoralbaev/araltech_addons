<odoo>
    <template id="project_list_template" name="Project List">
        <t t-call="website.layout">
            <div class="container">
                <h1 style="text-align: center; padding-top: 20px;">Our Projects</h1>
                <h4 style="text-align: center; padding-bottom: 20px;">Check out our projects</h4>
                <div class="row">
                    <t t-foreach="projects" t-as="project">
                        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                            <div class="card">
                                <t t-if="project.image">
                                    <img class="card-img-top img-thumbnail" t-att-src="'/web/image/araltech.project/' + str(project.id) + '/image'" style="width: 100%; height: auto; max-height: 200px; object-fit: cover;"/>
                                </t>
                                <div class="card-body">
                                    <h5 class="card-title" t-esc="project.name"/>
                                    <p class="card-text">
                                        <t t-esc="project.description[:100]"/>...
                                    </p>
                                    <a t-att-href="'/projects/' + str(project.id)" class="btn btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="project_detail_template" name="Project Detail">
        <t t-call="website.layout">
            <div class="container" style="padding-top: 40px;">
                <div class="row">
                    <div class="col-8">
                        <h1 t-esc="project.name"/>
                        <p t-esc="project.description"/>
                        <a t-if="project.demo_url" t-att-href="project.demo_url" class="btn btn-primary">Demo URL</a>
                        <a t-if="project.demo_video_url" t-att-href="project.demo_video_url" class="btn btn-secondary">Demo Video URL</a>
                        <p class="mt-2">Start Date: <t t-esc="project.start_date"/></p>
                        <p>End Date: <t t-esc="project.end_date"/></p>
                    </div>
                    <div class="col-4">
                        <t t-if="project.image">
                            <img t-att-src="'/web/image/araltech.project/' + str(project.id) + '/image'" class="img-fluid"/>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
